[Unit]
Description=Site Sychronization OpenHIM Mediator

[Service]
WorkingDirectory=/usr/share/openhim-mediator-sync
ExecStart=/usr/bin/npm start
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=sync-mediator
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target